@model ID.Serve.Models.ExceptionDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = $"Error {Model.StatusCode}";
}
<h4>Exception</h4>
<hr />
<div class="alert alert-warning">
    <h2>Error @Model.StatusCode</h2>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StackTrace)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StackTrace)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Source)
        </dd>
    </dl>
</div>